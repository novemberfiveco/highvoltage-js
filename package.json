{
  "name": "@novemberfiveco/highvoltage-js",
  "version": "0.7.0",
  "description": "Highvoltage runs Danger.js for your N5 project",
  "main": "dangerfile.js",
  "repository": {
    "type": "git",
    "url": "git://github.com/novemberfiveco/highvoltage-js.git"
  },
  "author": "Jan Stevens <jan.stevens@novemberfive.co>",
  "license": "MIT",
  "engines": {
    "node": ">=16.13"
  },
  "bin": {
    "highvoltage": "./bin/cli.sh"
  },
  "files": [
    "plugins/",
    "dangerfile.js",
    "bin/"
  ],
  "dependencies": {
    "danger": "11.2.3",
    "eslint": "7.32.0"
  },
  "devDependencies": {
    "@release-it/conventional-changelog": "^5.1.1",
    "prettier": "2.4.0",
    "release-it": "^15.9.3"
  },
  "publishConfig": {
    "access": "public"
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release v${version}"
    },
    "github": {
      "release": true,
      "autoGenerate": true,
      "tokenRef": "GITHUB_TOKEN"
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": {
          "name": "conventionalcommits",
          "types": [
            {
              "type": "feat",
              "section": "Features"
            },
            {
              "type": "fix",
              "section": "Bug Fixes"
            },
            {
              "type": "perf",
              "section": "Performance improvements"
            }
          ]
        },
        "infile": "CHANGELOG.md",
        "ignoreRecommendedBump": true
      }
    }
  }
}
